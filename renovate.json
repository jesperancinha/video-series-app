{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "repositories": ["jesperancinha/video-series-app"],
  "platform": "gitlab",
  "packageRules": [
    {
      "matchPackageNames": ["com.thoughtworks.xstream:xstream"],
      "allowedVersions": "!/\\1\\.4\\.19$/"
    },
    {
      "matchPackageNames": ["com.thoughtworks.xstream:xstream"],
      "allowedVersions": "!/\\1\\.4\\.18$/"
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "Angular and types updates",
      "matchPackagePrefixes": [
        "@angular/",
        "@angular-devkit/",
        "@babel/",
        "@material/",
        "@ngx-translate/",
        "@okta/",
        "@testing-library/",
        "@types",
        "ngx-markdown/",
        "moment",
        "tslib",
        "typescript",
        "rxjs",
        "codelyzer",
        "d3-color"
      ],
      "automerge": true
    },
    {
      "groupName": "Axon Framework Group",
      "matchPackagePrefixes": [
        "org.axonframework"
      ],
      "automerge": true
    },
    {
      "groupName": "JetBrains Groups",
      "matchPackagePrefixes": [
        "org.jetbrains"
      ],
      "automerge": true
    }
  ]
}
